<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="mainPane" prefHeight="600.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lbycpeiproject.GWACalculatorController">

    <!-- Title Label -->
    <Label layoutX="400.0" layoutY="30.0" style="-fx-font-size: 24px; -fx-text-fill: white;" text="GPA Calculator">
      <font>
         <Font name="Arial" size="12.0" />
      </font></Label>

    <!-- Course Code, Units, and Grade Labels -->
    <Label layoutX="272.0" layoutY="108.0" style="-fx-text-fill: white;" text="Course Code" />
    <Label layoutX="472.0" layoutY="108.0" style="-fx-text-fill: white;" text="Units" />
    <Label layoutX="567.0" layoutY="108.0" style="-fx-text-fill: white;" text="Grade" />

    <!-- TextFields for Input -->
    <TextField fx:id="courseCode1" layoutX="272.0" layoutY="148.0" prefWidth="150.0" />
    <TextField fx:id="units1" layoutX="472.0" layoutY="148.0" prefWidth="50.0" />
    <TextField fx:id="grade1" layoutX="567.0" layoutY="148.0" prefWidth="50.0" />

    <TextField fx:id="courseCode2" layoutX="272.0" layoutY="188.0" prefWidth="150.0" />
    <TextField fx:id="units2" layoutX="472.0" layoutY="188.0" prefWidth="50.0" />
    <TextField fx:id="grade2" layoutX="567.0" layoutY="188.0" prefWidth="50.0" />

    <TextField fx:id="courseCode3" layoutX="272.0" layoutY="228.0" prefWidth="150.0" />
    <TextField fx:id="units3" layoutX="472.0" layoutY="228.0" prefWidth="50.0" />
    <TextField fx:id="grade3" layoutX="567.0" layoutY="228.0" prefWidth="50.0" />

    <!-- Button to Calculate GPA -->
    <Button layoutX="400.0" layoutY="280.0" onAction="#calculateGWA" text="Calculate GPA" />

    <!-- Labels for Result -->
    <Label layoutX="150.0" layoutY="340.0" style="-fx-text-fill: white;" text="Deanâ€™s Lister?" />
    <Label fx:id="deansLister" layoutX="300.0" layoutY="340.0" style="-fx-text-fill: white;" text="NO" />

    <Label layoutX="150.0" layoutY="380.0" style="-fx-text-fill: white;" text="Total Units" />
    <Label fx:id="totalUnits" layoutX="300.0" layoutY="380.0" style="-fx-text-fill: white;" />

    <Label layoutX="150.0" layoutY="420.0" style="-fx-text-fill: white;" text="GPA" />
    <Label fx:id="gpa" layoutX="300.0" layoutY="420.0" style="-fx-text-fill: white;" />

</AnchorPane>
